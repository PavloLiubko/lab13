#include <iostream>

using namespace std;

int main() {
	
	int n,m;
	cout << "Введіть кількість стовпців матриці:";
	cin >> n;
	cout << endl;
	cout << "Введіть кількість рядків матриці:";
	cin >> m;

	int A[n][m];

	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			cout << "Введіть якесь значення для елементу матриці(всі значення мають бути унікальні):";
			cin >> A[i][j];			
}
}
	cout << "Наша матриця:\n";
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
		cout << A[i][j];

}
        cout << endl;
}


	int biggest1_i, biggest1_j, biggest2_i, biggest2_j;
	int biggest = A[0][0];
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if (biggest < A[i][j+1]) {
				biggest = A[i][j+1];
}			
}
}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if (A[i][j] == biggest) {
				biggest1_i = i;
				biggest1_j = j;
}		
}
}

	biggest = A[0][0];
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if (biggest < A[i][j+1] && A[i][j+1] != A[biggest1_i][biggest1_j]) {
				biggest = A[i][j+1];
}			
}
}	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if (A[i][j] == biggest) {
				biggest2_i = i;
				biggest2_j = j;
}		
}
}

	A[biggest1_i][biggest1_j] = 0;
	A[biggest2_i][biggest2_j] = 0;

	cout << "Наша змінена матриця:\n";
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
		    cout << A[i][j];
}
            cout << endl;
}

	return 0;
}
