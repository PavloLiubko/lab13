#include <iostream>
#include <cmath>

using namespace std;

int main() {
	
	int n, m;
	cout << "Введіть кількість стовпців матриці:";
	cin >> n;
	cout << endl;
	cout << "Введіть кількість рядків матриці:";
	cin >> m;
	cout << endl;
	
	int A[n][m];
	for ( int i = 0; i < n; i++ ) {
		for ( int j = 0; j < n; j++ ) {
			cout << "Введіть якесь значення для елементу матриці:";
			cin >> A[i][j];
			cout << endl; 
}
}
	cout << "Наша матриця: \n";
	for ( int i = 0; i < n; i++ ) {
		for ( int j = 0; j < n; j++ ) {

				cout << A[i][j];

		
		
}
                cout << endl;
}
	

	for ( int i = 0; i < n; i++ ) {
		for ( int j = 0; j < n; j++ ) {
			if (j == m - 1 - i) {
				A[i][j] = 0;
}
			else {
				A[i][j] = pow( A[i][j], 2 );
}
}
}

	cout << "Наша змінена матриця: \n";
	for ( int i = 0; i < n; i++ ) {
		for ( int j = 0; j < n; j++ ) {

				cout << A[i][j];
}

                cout << endl;
}

	return 0;
}
